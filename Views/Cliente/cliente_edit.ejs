<!doctype html>
<html lang="en">
      <head>
            <!-- Required meta tags -->
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">

            <!-- Bootstrap CSS -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

            <!--Usamos Boxicons-->
            <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>

            <title>Editar Cliente</title>

            <script>
                  function validar(e) {
                    key = e.keyCode || e.which;
                    
                        tecla = String.fromCharCode(key).toLowerCase();
                        letras = "abcdefghijklmn√±opqrstuvwxyz";
                        especiales="8-37-38-46-164"
                        teclado_especial=false;
          
                        for(var i in especiales){
                              if(key==especiales[i]){
                                    teclado_especial=true;break;
                              }
                        }
          
                        if(letras.indexOf(tecla)==-1 && !teclado_especial){
                              return false;
                        }
                  }
            </script>
      </head>

      <body>
            <% if (cliente) { %>            
            <div class="col-md-5">
                  <div class="card">  
                        <div class="card-body">

                              <form action="/update" method="POST">
                                    <input id="id" name="id" value="<%= cliente.Id_cliente %><" hidden>

                                    <div class="form-group">
                                          <input type="text" id="nombre" name="nombre" value="<%= cliente.Nombre %>" onkeypress="return validar(event)" placeholder="Nombre" class="form-control" autofocus>
                                    </div>
                                    <br>
                                    <div class="form-group">
                                          <input type="text" id="apellido" name="apellido" value="<%= cliente.Apellido %>" onkeypress="return validar(event)" placeholder="Apellido" class="form-control">
                                    </div>
                                    <br>                                    
                                    <div class="form-group">
                                          <input type="email" id="correo" name="correo" value="<%= cliente.Correo %>" placeholder="Correo" class="form-control">
                                    </div>
                                    <br>
                                    <div class="form-group">
                                          <input type="number" id="telefono" name="telefono" value="<%= cliente.Telefono %>" placeholder="Telefono" maxlength="10" class="form-control">
                                    </div>
                                    <br>

                                    <button type="submit" class="btn btn-primary">
                                          <i class='bx bxs-save bx-md' ></i>
                                    </button>

                                    <button type="submit" class="btn btn-secondary">
                                          <i class='bx bxs-x-circle bx-md'></i>
                                    </button>
                              </form>

                        </div>
                  </div>
            </div>
            <% } %>
                  
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
      </body>
</html>